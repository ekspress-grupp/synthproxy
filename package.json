{
  "name": "synthproxy",
  "license": "UNLICENSED",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "fix": "yarn run lint --fix && yarn run prettier fix",
    "lint": "tslint --format verbose --project tsconfig.json",
    "precommit": "lint-staged",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"{src,test}/**/*.{ts,json,md}\" \"**/*.md\"",
    "start": "nodemon --exec \"ts-node src/main.ts\"",
    "start-debugger": "nodemon nodemon --exec \"node --inspect --require ts-node/register src/main.ts\"",
    "swagger:lint": "swagger-tools validate swagger.yml"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "fluent-ffmpeg": "^2.1.2",
    "js-yaml": "^3.13.1",
    "mime-types": "^2.1.20",
    "minio": "^7.0.1",
    "swagger-ui-express": "^4.0.1",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.11.1",
    "@types/fluent-ffmpeg": "^2.1.7",
    "@types/js-yaml": "^3.11.2",
    "@types/mime-types": "^2.1.0",
    "@types/minio": "^7.0.0",
    "@types/node": "^9.6.8",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/tmp": "^0.0.33",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "swagger-tools": "^0.10.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json"
    ],
    "*.md": [
      "prettier --list-different"
    ]
  }
}
